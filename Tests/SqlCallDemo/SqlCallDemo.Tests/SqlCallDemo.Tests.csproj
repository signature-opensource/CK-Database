<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\..\Common\Shared.props" />

  <PropertyGroup>
    <TargetFramework>net451</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Include="App.config" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\CK.DB.Tests.NUnit\CK.DB.Tests.NUnit.csproj" />
    <ProjectReference Include="..\..\..\Tests\SqlCallDemo\SqlCallDemo\SqlCallDemo.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
    <Reference Include="System" />
  </ItemGroup>

  <Target Name="CopyNative" AfterTargets="Build">
    <ItemGroup>
      <NativeSqlTypes Include="$(NuGetPackageFolders)microsoft.sqlserver.types\14.0.314.76\nativeBinaries\**\*.*" />
    </ItemGroup>
    <Copy SkipUnchangedFiles="true" SourceFiles="@(NativeSqlTypes)" DestinationFolder="$(OutputPath)\SqlServerTypes\%(RecursiveDir)" />
  </Target>
  
</Project>
