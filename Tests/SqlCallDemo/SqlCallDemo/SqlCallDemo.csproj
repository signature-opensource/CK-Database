<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\..\Common\Shared.props" />

  <PropertyGroup>
    <TargetFramework>net451</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="**\*.sql;**\*.tql" Exclude="bin\**;obj\**;**\*.xproj;packages\**;@(EmbeddedResource)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\CK.SqlServer.Setup.Model\CK.SqlServer.Setup.Model.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
    <Reference Include="System" />
    <PackageReference Include="Microsoft.SqlServer.Types" Version="14.0.314.76" />
  </ItemGroup>

  <Target Name="CopyNative" AfterTargets="Build">
    <ItemGroup>
      <NativeSqlTypes Include="$(NuGetPackageFolders)microsoft.sqlserver.types\14.0.314.76\nativeBinaries\**\*.*" />
    </ItemGroup>
    <Copy SkipUnchangedFiles="true" SourceFiles="@(NativeSqlTypes)" DestinationFolder="$(OutputPath)\SqlServerTypes\%(RecursiveDir)" />
  </Target>
  
  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
