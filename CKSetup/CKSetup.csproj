<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\Common\Shared.props" />
  
  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.0;net461</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <PackageType Condition=" '$(TargetFramework)' == 'netcoreapp2.0' ">DotnetCliTool</PackageType>
    <AssemblyName>dotnet-CKSetup</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.1.1" />
    <PackageReference Include="CK.ActivityMonitor.SimpleSender" Version="$(CKActivityMonitorVersion)" />
    <PackageReference Include="Mono.Cecil" Version="$(MonoCecilVersion)" />
    <PackageReference Include="CSemVer" Version="$(CSemVerVersion)" />
    <PackageReference Include="System.Net.Http" Version="4.3.2" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp2.0' ">
    <PackageReference Include="System.Data.SqlClient" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System.IO.Compression" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Include="..\CK.StObj.Model\**\Configuration\*.cs">
      <Link>Includes\%(RecursiveDir)%(Filename)%(Extension)</Link>
      <Visible>true</Visible>
    </Compile>
    <Compile Include="..\CK.Setupable.Model\**\Configuration\*.cs">
      <Link>Includes\%(RecursiveDir)%(Filename)%(Extension)</Link>
      <Visible>true</Visible>
    </Compile>
    <Compile Include="..\CK.SqlServer.Setup.Model\**\Configuration\*.cs">
      <Link>Includes\%(RecursiveDir)%(Filename)%(Extension)</Link>
      <Visible>true</Visible>
    </Compile>
    <Compile Include="..\CK.Setupable.Engine\SetupRunner.XmlNames.cs">
      <Link>Includes\%(Filename)%(Extension)</Link>
      <Visible>true</Visible>
    </Compile>
  </ItemGroup>


</Project>
