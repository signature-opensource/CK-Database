<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\Common\Shared.props" />

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.0;net461</TargetFrameworks>
    <Description>Contains NUnit test helpers.</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\CK.StObj.Engine\CK.StObj.Engine.csproj" />
    <ProjectReference Include="..\CK.Setupable.Engine\CK.Setupable.Engine.csproj" />
    <ProjectReference Include="..\CK.SqlServer.Setup.Engine\CK.SqlServer.Setup.Engine.csproj" />
    <PackageReference Include="CK.SqlServer.Transform" Version="$(CKSqlServerParserVersion)" />
    <PackageReference Include="FluentAssertions" Version="$(FluentAssertionsVersion)" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp2.0' ">
    <PackageReference Include="NUnitLite" Version="3.9.0" />
    <PackageReference Include="NUnit" Version="3.9.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <PackageReference Include="NUnit" Version="[2.6.4]" />
    <Reference Include="System.Configuration" />
    <Reference Include="System" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
